<Window x:Class="Exel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="File Name:" Grid.Row="0" Grid.Column="0" Margin="5" />
        <TextBox x:Name="txtFileName" Grid.Row="0" Grid.Column="1" Margin="5" Width="300"/>
        <Button x:Name="btnSelectFile" Grid.Row="0" Grid.Column="2" Content="Select" Margin="5" Width="60" Click="btnSelectFile_Click"/>

        <Label Content="Input:" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="txtInput" Grid.Row="1" Grid.Column="1" Margin="5" TextWrapping="Wrap" AcceptsReturn="True" Grid.RowSpan="2"/>

        <Button x:Name="btnWrite" Grid.Row="1" Grid.Column="2" Content="Write" Margin="5" Width="60" Click="btnWrite_Click"/>
        <Label Content="Output:" Grid.Row="2" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="txtOutput" Grid.Row="2" Grid.Column="1" Margin="5" TextWrapping="Wrap" AcceptsReturn="True" Grid.RowSpan="3"/>

        <Button x:Name="btnRead" Grid.Row="3" Grid.Column="2" Content="Read" Margin="5" Width="60" Click="btnRead_Click"/>
    </Grid>
</Window>
